<br/>
<h1>Edit customer</h1>
 
 <%= form_for @customer, :html => {:multipart => true} do |f| %>
  <% if @customer.errors.any? %>
 <section id="flashMsg">
<div class="alert alert-block alert-error"> <a class="close" data-dismiss="alert" href="#">X</a> <h4 class="alert-heading">Error!</h4> updation failed </div>  </section>
  <ul>
  <% @customer.errors.full_messages.each do |error| %>
  <li><%= error %></li>
  <% end %>
  </ul>
 <% end %>

<h4><span class="customer">Customer details</span></h4>     
<%= f.label :code %>
<%= f.text_field :code,:readonly => true %><br />

<%= f.label :status %>
<%= f.text_field :status,:readonly => true %><br />
<span class="help-block">auto-updated</span>

<%= f.label :first_name %>
<%= f.text_field :first_name %><br />

<%= f.label :last_name %>
<%= f.text_field :last_name %><br />

<%= f.label :date_of_birth %>
<%= f.text_field :date_of_birth %><br />

<%= f.label :sex %><br />
<%= f.radio_button :sex, "male" %>
     <%= f.label :sex, "male", :value => "male" %><br />
     <%= f.radio_button :sex, "female" %>
     <%= f.label :sex, "female", :value => "female" %><br />
 
<hr>
<h4><span class="customer">Contact details</span></h4>
  
<%= f.label :city %>
<%= f.text_field :city %><br />

<%= f.label :state %>
<%= f.text_field :state %><br />

<%= f.label :pincode %>
<%= f.text_field :pincode %><br />

<%= f.label :address %>
<%= f.text_field :address, :id => "address", :cols => 5, :rows => 3 %><br />
</hr>

<hr>
  <h4><span class="customer">ID details</span></h4>
  <%= f.label :PAN %>
  <%= f.text_field :PAN %>
</hr>

<hr>
  <h4><span class="customer">Photo</span></h4>
  <%= f.label :Photo %>
  <%= f.file_field :photo %>
</hr> 

<br />          
<fieldset class="form-actions"> <%= f.submit "Update Customer", class: "btn btn-primary" %></field>
<% end %>